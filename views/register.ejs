
<%- include('header',{ title:'Signup' }); -%>
</head>

<body>
<section class="h-100 gradient-form" style="background-color: #eee;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-xl-10">
                    <div class="card rounded-3 text-black"> 
                        <div class="row g-0">
                            
                            <div class="col-lg-5 d-flex align-items-center gradient-custom-2">
                                <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                    <h4 class="mb-4">We are more than just a company</h4>
                                    <p class="small mb-0">Register yourself with minimum details and get access to the High Vision real estate management system portal. See you on the other side!
                                    </p>
                                </div>
                            </div>
                            <div class="col-lg-7">
                                <div class="card-body p-md-5 mx-md-4">
                            
                                    <div class="text-center">
                                        <img src="/res/logo.png" style="width: 100px;" alt="logo" class="mb-5">
                                        <!-- <h4 class="mt-1 mb-5 pb-1">Real Estate Management System</h4> -->
                                    </div>
                            
                                    <form action="" method="POST">
                            
                                        <div class="form-outline mb-4">
                                        
                                            <% if(typeof msg !='undefined' ){ %>
                                                <div class="success-msg">
                                                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                                                        <strong>Success!</strong>
                                                        <%= msg %>
                                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                    </div>
                                                </div>
                                                <% } if(typeof error !=='undefined' ){ %>
                                                    <div class="err-msg">
                                                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                                            <strong>Error!</strong>
                                                            <%= error %>
                                                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                                    <span aria-hidden="true">&times;</span>
                                                                </button>
                                                        </div>
                                                    </div>
                                                    <% } %>
                                            <input type="text" class="form-control" name="_name" id="user_name" placeholder="Enter your name">
                                            <label for="user_name">Name</label>
                                        </div>

                                        <div class="form-outline mb-4">
                            
                                            <input type="email" class="input form-control" name="_email" id="user_email"
                                                placeholder="Enter your email">
                                            <label class="form-label" for="user_email">Email ID</label>
                                        </div>

                                        <div class="form-outline mb-4">
                                        
                                            <input type="text" class="input form-control" name="_phone" id="user_phone" placeholder="Enter your phone number" maxlength=10 minlength=10>
                                            <label class="form-label" for="user_phone">Phone</label>
                                        </div>

                                        <div class="form-outline mb-4">
                                        
                                            <input class="input form-control" name="_address" id="user_address" placeholder="Enter your address"> </input>
                                            <label class="form-label" for="user_address">Address</label>
                                        </div>
                            
                                        <div class="form-outline mb-4">
                                            <input type="password" class="input form-control" name="_password" id="user_pass"
                                                placeholder="Enter new password">
                                            <label class="form-label" for="user_pass">Password</label>
                                        </div>
                                        
                                        
                                    
                            
                                                <div class="text-center pt-1 mb-5 pb-1">
                                                    <input type="submit" class="btn btn-primary btn-block fa-lg gradient-custom-2  mb-3"
                                                        type="button" value="Sign Up">
                                                    
                                                </div>
                            
                                                <div class="d-flex align-items-center justify-content-center pb-4">
                                                    <p class="mb-0 me-2">Already have an account?</p>
                                                    <a href="./login" class="btn btn-outline-dark ml-3">Login</a>
                                                </div>
                            
                                    </form>
                            
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <%- include('footer'); -%>