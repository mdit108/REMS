<%- include('header'); -%>
    <link rel="stylesheet" href="../homepage.css">
    <link rel="stylesheet" href="../view.css">
    </head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-transparent">
        <a class="navbar-brand" href="/">
            <img src="../res/logonotext.png" width="30" height="30" class="d-inline-block align-top mr-3" alt="">
            High Vision
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02"
            aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
    
        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
            <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="../">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="../viewPage">View</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="../sellPage">Sell</a>
                </li>
                <li class="nav-item">
                    <a href="../logout" class="nav-link">Logout</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container">
        <% for (var i=0;i<properties.length;i++){ %>
            <div class="element">
                <div class="left">
                    <div class="address">
                        <%= properties[i].address %>
                    </div>
                    <div class="city">
                        CITY: <%= properties[i].city %>
                    </div>
                    <div class="desc">
                        <%= properties[i].description %>
                    </div>
                    <div class="price">
                        <%= properties[i].price %>/-
                    </div>
                </div>
                <div class="right">
                    <div class="area">
                        <%= properties[i].area%> Sq. Feet
                    </div>
                    <form method="POST" action="./<%= userID %>/<%= properties[i].propid %>">
                        <div class="interested">
                            <button type="submit" class="mt-3 btn btn-primary">Mark as Sold!</button>
                        </div>
                    </form>
                    
                </div>
            </div>
            <% } %>
    
    
    </div>


<%- include('footer'); -%>