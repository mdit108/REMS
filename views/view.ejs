<%- include('header'); -%>
    <link rel="stylesheet" href="./homepage.css">
    <link rel="stylesheet" href="./view.css">
    </head>

<body>
    <%- include('navbar'); -%>
    <div class="container">
        <h1> List of Properties </h1>
    </div>
    <div class="container">
        <% for (var i=0;i<details.length;i++){ %>
            <div class="element">
                <div class="left">
                <div class="name">
                    <%= details[i].name %>
                </div>
                <div class="address">
                    <%= details[i].address %>
                </div> 
                <div class = "city">
                    CITY: <%= details[i].city %>
                </div>
                <div class="desc">
                    <%= details[i].description %>
                </div>
                <div class="price">
                    <%= details[i].price %>/-
                </div>
                </div>
                <div class="right">
                    <div class="area">
                        <%= details[i].area%> Sq. Feet
                    </div>
                    <div class="interested">
                        <a class="mt-3 btn btn-primary">Get Details!</a>
                    </div>
                </div>
            </div>
        <% } %>
        
        
    </div>
<%- include('footer'); -%>