<%- include('header',{ title:'Login' }); -%>
</head>

<body>
    <section class="h-100 gradient-form" style="background-color: #eee;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-xl-10">
                    <div class="card rounded-3 text-black">
                        <div class="row g-0">
                            <div class="col-lg-7">
                                <div class="card-body p-md-5 mx-md-4">
    
                                    <div class="text-center">
                                        <img src="/res/logo.png" style="width: 100px;" alt="logo" class="mb-5">
                                        <h4 class="mt-1 pb-1">LOGIN</h4>
                                    </div>
    
                                    <form action="" method="POST">
    
    
                                        <div class="form-outline mb-4">
                                            
                                                <input type="email" class="input form-control" name="_email" id="user_email" placeholder="Enter your email">
                                            <label class="form-label" for="user_email">Email ID</label>
                                        </div>
    
                                        <div class="form-outline mb-4">
                                            <input type="password" class="input form-control" name="_password" id="user_pass" placeholder="Enter new password">
                                            <label class="form-label" for="user_pass">Password</label>
                                        </div>
                                        <% if(typeof error !=='undefined' ){ %>
                                            <div class="err-msg">
                                                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                                    <strong>Error!</strong> <%= error %>
                                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                
                                            </div>
                                            <% } %>
    
                                        <div class="text-center pt-1 mb-5 pb-1">
                                            <input type="submit" class="btn btn-primary btn-block fa-lg gradient-custom-2  mb-3"
                                                type="button" value="Log In">
                                            <a class="text-muted" href="#!">Forgot password?</a>
                                        </div>
    
                                        <div class="d-flex align-items-center justify-content-center pb-4">
                                            <p class="mb-0 me-2">Don't have an account?</p>
                                            <a href="./signup" class="btn btn-outline-dark ml-3">Create new</a>
                                        </div>
    
                                    </form>
    
                                </div>
                            </div>
                            <div class="col-lg-5 d-flex align-items-center gradient-custom-2">
                                <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                    <h4 class="mb-4">We are more than just a company</h4>
                                    <p class="small mb-0">High Vision is the one stop solution for all real estate queries. Buy your dream property, sell at the best market prices, invest better with the help of our area specific price trends. 
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include('footer'); -%>